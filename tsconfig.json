{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowJs": true,
    // âœ… Allow JavaScript files
    "checkJs": false,
    // ðŸ”„ Optional: Set to true if you want TypeScript to type-check .js files
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    // Optional: loosen strict typing while mixing
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  // Or your source directory
  "exclude": [
    "node_modules"
  ]
}
